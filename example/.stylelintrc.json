{
  "extends": "stylelint-config-standard",
  "plugins": [
    "../lib/index"  
  ],
  "rules": {
    "sustainable-css/color-hex-codes": true,
    "sustainable-css/shorthand-properties": true,
    "sustainable-css/shorter-units": true,
    "sustainable-css/numerical-font-weight": true,
    "sustainable-css/prefer-em": true,
    "sustainable-css/minimise-numeric-values": true,
    "sustainable-css/remove-unnecessary-units": true,
    "sustainable-css/shorter-class-names": true,
    "sustainable-css/concatenate-property-values": true,
    "sustainable-css/avoid-overly-specific-selectors": true,
    "sustainable-css/avoid-compression": true,
    "sustainable-css/avoid-extra-spaces": true,
    "sustainable-css/avoid-important-declarations": true,
    "sustainable-css/use-css-grid": true,
    "sustainable-css/lower-z-index-values": true,
    "sustainable-css/minimise-float-use": true,
    "sustainable-css/minimise-float-use-copy": true,
    "sustainable-css/minimise-fontface-requests": true,
    "sustainable-css/minimise-vendor-prefixes": true,
    "sustainable-css/optimise-media-queries": true,
    "sustainable-css/remove-quotes-from-fonts": true,
    "sustainable-css/remove-semicolons": true,
    "sustainable-css/shorthand-optimisations": true,
    "sustainable-css/use-data-uris": true,
    "sustainable-css/use-display-none": true,
    "sustainable-css/use-html-tags": true,
    "sustainable-css/avoid-inherit-initial": true,
    "sustainable-css/use-inline-flexbox": true,
    "sustainable-css/use-special-characters": true
  }
}
